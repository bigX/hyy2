<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aretha="http://schemas.android.com/apk/res-auto" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/seashell"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <ImageView
            android:id="@+id/splash_img_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:src="@drawable/hai" />

        <RelativeLayout
            android:id="@+id/splash_rl_login_passer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/splash_img_title"
            android:layout_centerHorizontal="true"
            android:background="@drawable/splash_login_bg_xml"
            android:padding="10dip"      
            android:layout_marginTop="86dp" >

            <ImageView
                android:id="@+id/splash_img_login_passer_head"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="32dp"
                android:src="@drawable/passer_head" />

            <TextView
                android:id="@+id/splash_txt_2_login_passer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/splash_img_login_passer_head"
                android:text="@string/splash_txt_2_login_passer" />
           
        </RelativeLayout>

        <com.hiyaya.utl.AccelerateLinearDecelerateProgressBar
            android:id="@+id/accelerateLinearDecelerateProgressBar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/copyright"
            android:layout_marginTop="0dip"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/splash_rl_login_passer"
            aretha:dotColor="@color/navy" />

        <TextView
            android:id="@+id/copyright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="6dp"
            android:text="@string/all_rights_reserved"
            android:textColor="@color/lightgrey"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/splash_txt_register"
            android:padding="5dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/accelerateLinearDecelerateProgressBar"
            android:layout_alignRight="@+id/copyright"
            android:layout_marginBottom="20dp"
            android:background="@drawable/splash_login_bg_xml"
            android:textColor="@color/saddlebrown"
            android:text="@string/register" />

    </RelativeLayout>

</merge>